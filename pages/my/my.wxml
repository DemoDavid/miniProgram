      </view>
      <view class="myitem-icon flex-item" >
        <image src="../../images/jiantou.png"></image>
      </view>
    </view>
    <view class="my-item flex-wrp" bindtap="goSetting">
      <view class="myitem-icon flex-item" >
        <image src="/images/setting.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>设置</text>
      </view>
      <view class="myitem-icon flex-item" >
        <image src="../../images/jiantou.png"></image>
      </view>
    </view>
