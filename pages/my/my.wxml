        <image src="../../images/cards.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>银行卡</text>
      </view>
      <view class="myitem-icon flex-item" >
        <image src="../../images/jiantou.png"></image>
      </view>
    </view>
    <view class="my-item flex-wrp" bindtap="goPerson">
      <view class="myitem-icon flex-item" >
        <image src="../../images/admin.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>个人信息</text>
      </view>
      <view class="myitem-icon flex-item" >
        <image src="../../images/jiantou.png"></image>
      </view>
    </view>
    <view class="my-item flex-wrp" bindtap="goSafe">
