<!--pages/index/receive/receiveMoney/index.wxml-->
<view class="container">
    <view class="blank-box">
        <view class="white-box">
            <view class="first-text">
                <view class="text-item">充值金额</view>
            </view>
            <view class="second-text">
                <view class="goat">￥</view>
                <view class="item-input">
                    <input type="number"  class="inputtext" bindinput="getmoney"/>
                </view>
            </view>
        </view>
        <view class="last-button">
            <button type="primary" bindtap="addMoney">确定</button>
        </view>
    </view>
    
</view>

