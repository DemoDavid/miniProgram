/* pages/my/setting/index.wxss */
page{
    width: 100%;
    height: 100%;
}
.topbar{
    display: flex;
    width: 100%;
    height: 80rpx;
    background-color:rgb(39, 184, 100); 
    justify-content: center;
    margin-bottom: 15rpx;
    padding-top: 10rpx;
}
.topbar .topbar-text{
    font-size: 50rpx;
    color:#fff;
}

.middle{
    display: flex;
    flex-direction: column;
}
.middle-item{
    margin-left: 20rpx;
    margin-bottom: 50rpx;
}
.item-top{
    font-size: 60rpx;
    font-weight: bold;
    padding-top: 20rpx;
    margin-bottom: 30rpx;
}
.item-selection{
    width: 100%;
    margin: 0 auto;
    padding-top: 20rpx;
    padding-bottom:20rpx ;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid rgb(239, 239, 239);
    
}
.item-selection-index{
    font-size: 70rpx;
    line-height:80rpx;
    margin-bottom: 20rpx;
}
.item-selection image{
    margin-left: 330rpx;
    width: 90rpx;
    height: 90rpx;
}

.item-selection-glow{
    margin-left: 30rpx;
    font-size: 60rpx;
    color:grey;
}
.item-selection-glow-two{
    margin-left: 250rpx;
    font-size: 60rpx;
    color:grey;
}
.item-selection button{
    margin-top: 5rpx;
    margin-right: 20rpx;
}

.buttom{
    overflow:hidden;
	margin-bottom:0;
	width:100%;
	position:fixed;
	bottom:0px;
	display:flex;
    justify-content:center;
    flex-wrap: wrap;
}
.buttom-text{
    display: flex;
    width: 100%;
    height: 130rpx;
    line-height: 130rpx;
    justify-content: center;
    font-size: 50rpx;
    font-weight: bold;
    border-bottom: 1px solid rgb(239, 239, 239);
}